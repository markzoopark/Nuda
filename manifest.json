{
	"manifest_version": 3,
	"name": "Font Changer",
	"version": "1.0.0",
	"description": "Changes all fonts on websites to your preferred font",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["styles.css"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"host_permissions": ["<all_urls>"],
	"permissions": ["storage"],
	"options_page": "options.html"
}
